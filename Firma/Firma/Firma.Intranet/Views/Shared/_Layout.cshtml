@inject Firma.Data.Data.FirmaContext DbContext

@{
    var contentDict = DbContext.ContentText.ToDictionary(c => c.Key, c => c.Value);
    string GetText(string key, string fallback) => contentDict.TryGetValue(key, out var val) ? val : fallback;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firma.PortalWWW</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Ikony -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <!-- Style lokalne -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Firma.PortalWWW.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="body-fixed">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black py-2 fixed-top shadow-sm">
            <div class="container d-flex justify-content-between align-items-center">

                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo-item" src="~/assets/logo.svg" width="200" height="48" alt="Logo">
                </a>

                <!-- Hamburger -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nawigacja -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-column flex-lg-row gap-2 gap-lg-4 text-uppercase small mx-auto">
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Kind" asp-action="Index">@GetText("Nav_Kind", "Kind")</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Strona" asp-action="Index">@GetText("Nav_Pages", "Pages")</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="News" asp-action="Index">@GetText("Nav_News", "News")</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Products" asp-action="Index">@GetText("Nav_Products", "Products")</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Users" asp-action="Index">@GetText("Nav_Users", "Users")</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Orders" asp-action="Index">@GetText("Nav_Orders", "Orders")</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Reports" asp-action="Index">@GetText("Nav_Reports", "Reports")</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Support" asp-action="Index">@GetText("Nav_Support", "Support")</a></li>
                    </ul>
                </div>

                <!-- Ikony -->
                <div class="d-flex gap-3">
                    <a class="nav-link-icon-main"><i class="bi bi-search"></i></a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5 pt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer text-center py-5 bg-black text-light">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-12 mb-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo-item" src="/assets/logo.svg" alt="Logo" width="150">
                    </a>
                </div>

                <div class="col-12 col-md-8 mb-4">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a class="text-for-footer" asp-controller="Kind" asp-action="Index">@GetText("Footer_Kind", "Kind")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" asp-controller="Strona" asp-action="Index">@GetText("Footer_Pages", "Pages")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" asp-controller="News" asp-action="Index">@GetText("Footer_News", "News")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" asp-controller="Products" asp-action="Index">@GetText("Footer_Products", "Products")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" asp-controller="Users" asp-action="Index">@GetText("Footer_Users", "Users")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" asp-controller="Orders" asp-action="Index">@GetText("Footer_Orders", "Orders")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" asp-controller="Reports" asp-action="Index">@GetText("Footer_Reports", "Reports")</a></li>
                    </ul>
                </div>

                <div class="col-12 mb-4">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a class="text-for-footer" href="#">@GetText("Footer_Terms", "Terms of Service")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" href="#">@GetText("Footer_Privacy", "Privacy Policy")</a></li>
                        <li class="list-inline-item"><a class="text-for-footer" href="#">@GetText("Footer_Cookies", "Cookie Policy")</a></li>
                    </ul>
                </div>

                <div class="col-12">
                    <p>@GetText("Footer_Copy", "© 2025 Tech Stack. All Rights Reserved.")</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
