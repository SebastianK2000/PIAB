<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firma.PortalWWW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Firma.PortalWWW.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @* Inne globalne style mogą być tutaj *@
    @RenderSection("Styles", required: false)
</head>

<body class="body-fixed">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black py-2 fixed-top shadow-sm">
            <div class="container d-flex justify-content-between align-items-center">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo-item" src="~/assets/logo.svg" width="200" height="48" alt="Logo">
                </a>

                <!-- Przycisk hamburgera na mniejszych ekranach -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" id="navbar-toggler">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu nawigacyjne -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-row gap-4 text-uppercase small mx-auto">
                        <li class="nav-item">
                            <a class="nav-item-main" asp-area="" asp-controller="Kind" asp-action="Index">Kind</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-main" asp-area="" asp-controller="Strona" asp-action="Index">Pages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-main" asp-area="" asp-controller="News" asp-action="Index">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-main" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-main" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-main" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item-main" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                        </li>
                    </ul>
                </div>

                <div class="d-flex gap-3" id="search-icon-container">
                    <a class="nav-link-icon-main"><i class="bi bi-search"></i></a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer text-center py-5 bg-black text-light">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-12 mb-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo-item" asp-area="" asp-controller="Home" asp-action="" src="/assets/logo.svg" alt="Logo" width="150">
                    </a>
                </div>

                <div class="col-12 col-md-8 mb-4">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a asp-area="" asp-controller="Kind" asp-action="Index" class="text-for-footer">Kind</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="Strona" asp-action="Index" class="text-for-footer">Strona</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="News" asp-action="Index" class="text-for-footer">News</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="Products" asp-action="Index" class="text-for-footer">Products</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="Users" asp-action="Index" class="text-for-footer">Users</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="Orders" asp-action="Index" class="text-for-footer">Orders</a></li>
                        <li class="list-inline-item"><a asp-area="" asp-controller="Reports" asp-action="Index" class="text-for-footer">Reports</a></li>
                    </ul>
                </div>

                <div class="col-12 mb-4">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#" class="text-for-footer">Terms of Service</a></li>
                        <li class="list-inline-item"><a href="#" class="text-for-footer">Privacy Policy</a></li>
                        <li class="list-inline-item"><a href="#" class="text-for-footer">Cookie Policy</a></li>
                    </ul>
                </div>

                <div class="col-12">
                    <p>&copy; 2025 Tech Stack. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const navbarToggler = document.getElementById('navbar-toggler');
        const searchIcon = document.getElementById('search-icon-container');
        const navbarNav = document.getElementById('navbarNav');

        // Zmiana ikony hamburgera na krzyżyk i kontrolowanie widoczności wyszukiwarki
        navbarToggler.addEventListener('click', function () {
            if (navbarNav.classList.contains('show')) {
                navbarToggler.querySelector('.navbar-toggler-icon').classList.remove('open');
                searchIcon.style.display = 'block'; // Pokazuje ikonę wyszukiwania
            } else {
                navbarToggler.querySelector('.navbar-toggler-icon').classList.add('open');
                searchIcon.style.display = 'none'; // Ukrywa ikonę wyszukiwania
            }
        });

    </script>
</body>
</html>
