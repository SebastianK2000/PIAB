@model Firma.Data.Data.Sklep.Users

@{
    ViewData["Title"] = "Edit User";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

<div class="container">
    <div class="title">Edit Account</div>
    <div class="content">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <input type="hidden" asp-for="IdUser" />

            <div class="user-details">
                <div class="input-box">
                    <span class="details">Name</span>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Surname</span>
                    <input asp-for="Surname" class="form-control" placeholder="Enter your surname" />
                    <span asp-validation-for="Surname" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Email</span>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Phone Number</span>
                    <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Address</span>
                    <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">City</span>
                    <input asp-for="City" class="form-control" placeholder="Enter your city" />
                    <span asp-validation-for="City" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Postal Code</span>
                    <input asp-for="PostalCode" class="form-control" placeholder="Enter your postal code" />
                    <span asp-validation-for="PostalCode" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Country</span>
                    <input asp-for="Country" class="form-control" placeholder="Enter your country" />
                    <span asp-validation-for="Country" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Password</span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Confirm Password</span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Date of Birth</span>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Save Changes">
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
