@model IEnumerable<Firma.Data.Data.CMS.Strona>

@{
    ViewData["Title"] = "Pages";
}

<div class="container py-4">
    <h1 class="mb-4">Pages</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Page</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Link Title</th>
                    <th scope="col">Page Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Position</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.LinkTytul)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tytul)</td>
                        <td class="text-truncate" style="max-width: 250px;">@Html.DisplayFor(modelItem => item.Content)</td>
                        <td>@Html.DisplayFor(modelItem => item.Pozycja)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdStrony" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.IdStrony" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
