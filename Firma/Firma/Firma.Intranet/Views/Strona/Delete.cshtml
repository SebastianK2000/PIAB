@model Firma.Data.Data.CMS.Strona

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <link rel="stylesheet" href="~/css/delete.css" />
}

<div class="container">
    <div class="title text-danger">Delete Page</div>

    <div class="content">
        <h4 class="mb-4">Are you sure you want to delete this?</h4>

        <div class="content">
            <div class="user-details">
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.LinkTytul)</span>
                    <div>@Html.DisplayFor(model => model.LinkTytul)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Tytul)</span>
                    <div>@Html.DisplayFor(model => model.Tytul)</div>
                </div>
                <div class="input-box" style="flex: 1 1 100%;">
                    <span class="details">@Html.DisplayNameFor(model => model.Content)</span>
                    <div>@Html.DisplayFor(model => model.Content)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Pozycja)</span>
                    <div>@Html.DisplayFor(model => model.Pozycja)</div>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="button">
                <input type="hidden" asp-for="IdStrony" />
                <input type="submit" value="Delete" />
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
