@model Firma.Data.Data.CMS.Strona

@{
    ViewData["Title"] = "Create Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

<div class="container">
    <div class="title">Create Page</div>
    <div class="content">
        <form asp-action="Create" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="user-details">
                <div class="input-box">
                    <span class="details">Link Title</span>
                    <input asp-for="LinkTytul" class="form-control" placeholder="Enter link title" />
                    <span asp-validation-for="LinkTytul" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Title</span>
                    <input asp-for="Tytul" class="form-control" placeholder="Enter page title" />
                    <span asp-validation-for="Tytul" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Content</span>
                    <input asp-for="Content" class="form-control" placeholder="Enter page content" />
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Position</span>
                    <input asp-for="Pozycja" class="form-control" placeholder="Enter position" />
                    <span asp-validation-for="Pozycja" class="text-danger small"></span>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Create Page" />
            </div>
        </form>

        <div class="back-button">
            <a asp-action="Index" class="btn-back">← Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
