@model IEnumerable<Firma.Data.Data.Sklep.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="my-4">Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Product</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Kind ID</th>
                <th>Color</th>
                <th>Description</th>
                <th>Image URL</th>
                <th>Kind Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdKind)</td>
                    <td>@Html.DisplayFor(modelItem => item.Color)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImageUrl)</td>
                    <td>@Html.DisplayFor(modelItem => item.Kind.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProduct" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.IdProduct" class="btn btn-sm btn-danger ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
