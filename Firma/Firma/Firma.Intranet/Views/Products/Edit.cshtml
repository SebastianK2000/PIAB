@model Firma.Data.Data.Sklep.Product

@{
    ViewData["Title"] = "Edit Product";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

<div class="container">
    <div class="title">Edit Product</div>
    <div class="content">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <input type="hidden" asp-for="IdProduct" />

            <div class="user-details">
                <div class="input-box">
                    <span class="details">Name</span>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Price</span>
                    <input asp-for="Price" class="form-control" placeholder="Enter product price" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Product Kind</span>
                    <input asp-for="IdKind" class="form-control" placeholder="Enter product kind" />
                    <span asp-validation-for="IdKind" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Color</span>
                    <input asp-for="Color" class="form-control" placeholder="Enter product color" />
                    <span asp-validation-for="Color" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Description</span>
                    <input asp-for="Description" class="form-control" placeholder="Enter product description" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Image URL</span>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL" />
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Product Kind</span>
                    <select asp-for="IdKinds" class="form-control" asp-items="ViewBag.IdKinds">
                        <option value="">Select Product Kind</option>
                    </select>
                    <span asp-validation-for="IdKinds" class="text-danger small"></span>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Save Changes" />
            </div>
        </form>

        <div class="back-button">
            <a asp-action="Index" class="btn-back">← Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
