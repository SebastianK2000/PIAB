@model Firma.Data.Data.Sklep.Product

@{
    ViewData["Title"] = "Delete Product";
}

@section Styles {
    <link rel="stylesheet" href="~/css/delete.css" />
}

<div class="container">
    <div class="title text-danger">Delete Product</div>

    <div class="content">
        <h4 class="mb-4">Are you sure you want to delete this?</h4>
        <div class="content">
            <div class="user-details">
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Name)</span>
                    <div>@Html.DisplayFor(model => model.Name)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Price)</span>
                    <div>@Html.DisplayFor(model => model.Price)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.IdKind)</span>
                    <div>@Html.DisplayFor(model => model.IdKind)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Color)</span>
                    <div>@Html.DisplayFor(model => model.Color)</div>
                </div>
                <div class="input-box" style="flex: 1 1 100%;">
                    <span class="details">@Html.DisplayNameFor(model => model.Description)</span>
                    <div>@Html.DisplayFor(model => model.Description)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.ImageUrl)</span>
                    <div>@Html.DisplayFor(model => model.ImageUrl)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Kind)</span>
                    <div>@Html.DisplayFor(model => model.Kind.Name)</div>
                </div>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdProduct" />
                <div class="button">
                    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}