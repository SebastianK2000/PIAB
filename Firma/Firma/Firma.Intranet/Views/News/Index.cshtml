@model IEnumerable<Firma.Data.Data.CMS.News>

@{
    ViewData["Title"] = "News";
}

<h1 class="my-4">News</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New News</a>
</p>

<table class="table table-striped table-bordered table-hover align-middle text-center table-responsive-stack">
    <thead class="table-dark">
        <tr>
            <th>Link Title</th>
            <th>Title</th>
            <th>Content</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.LinkTytul)</td>
                <td>@Html.DisplayFor(modelItem => item.Tytul)</td>
                <td>@Html.DisplayFor(modelItem => item.Content)</td>
                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdNews" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.IdNews" class="btn btn-sm btn-danger ms-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
