@model IEnumerable<Firma.Data.Data.CMS.News>

@{
    ViewData["Title"] = "News";
}

<div class="container py-4">
    <h1 class="mb-4">News</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New News</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Link Title</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Position</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LinkTytul</td>
                        <td>@item.Tytul</td>
                        <td class="text-truncate" style="max-width: 300px;">@item.Content</td>
                        <td>@item.Position</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdNews" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.IdNews" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
