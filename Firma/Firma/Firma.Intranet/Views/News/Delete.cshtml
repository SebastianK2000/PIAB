@model Firma.Data.Data.CMS.News

@{
    ViewData["Title"] = "Delete News";
}

@section Styles {
    <link rel="stylesheet" href="~/css/delete.css" />
}

<div class="container">
    <div class="title text-danger">Delete News</div>
        <div class="content">
        <h4 class="mb-4">Are you sure you want to delete this?</h4>

        <div class="content">
            <div class="user-details">
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.LinkTytul)</span>
                    <div>@Html.DisplayFor(model => model.LinkTytul)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Tytul)</span>
                    <div>@Html.DisplayFor(model => model.Tytul)</div>
                </div>
                <div class="input-box" style="flex: 1 1 100%;">
                    <span class="details">@Html.DisplayNameFor(model => model.Content)</span>
                    <div>@Html.DisplayFor(model => model.Content)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Position)</span>
                    <div>@Html.DisplayFor(model => model.Position)</div>
                </div>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdNews" />
                <div class="button">
                    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}