@model Firma.Data.Data.CMS.News

@{
    ViewData["Title"] = "Edit News";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

<div class="container">
    <div class="title">Edit News</div>
    <div class="content">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <input type="hidden" asp-for="IdNews" />

            <div class="user-details">
                <div class="input-box">
                    <span class="details">Link Title</span>
                    <input asp-for="LinkTytul" class="form-control" placeholder="Enter link title" />
                    <span asp-validation-for="LinkTytul" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Title</span>
                    <input asp-for="Tytul" class="form-control" placeholder="Enter title" />
                    <span asp-validation-for="Tytul" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Content</span>
                    <input asp-for="Content" class="form-control" placeholder="Enter content" />
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Position</span>
                    <input asp-for="Position" class="form-control" placeholder="Enter position" />
                    <span asp-validation-for="Position" class="text-danger small"></span>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Save Changes" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
