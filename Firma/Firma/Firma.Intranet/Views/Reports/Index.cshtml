@model IEnumerable<Firma.Data.Data.Sklep.Reports>

@{
    ViewData["Title"] = "Reports";
}

<h1 class="my-4">Reports</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Report</a>
</p>

<table class="table table-striped table-bordered table-hover align-middle text-center table-responsive-stack">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>User</th>
            <th>Product</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.User)</td>
                <td>@Html.DisplayFor(modelItem => item.Product)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdReports" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.IdReports" class="btn btn-sm btn-danger ms-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
