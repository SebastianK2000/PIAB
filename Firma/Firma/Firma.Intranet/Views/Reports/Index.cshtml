@model IEnumerable<Firma.Data.Data.Sklep.Reports>

@{
    ViewData["Title"] = "Reports";
}

<div class="container py-4">
    <h1 class="mb-4">Reports</h1>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Report</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>User</th>
                    <th>Product</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td class="text-truncate" style="max-width: 250px;">@item.Description</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.User</td>
                        <td>@item.Product</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdReports" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.IdReports" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
