@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 p-4 mb-4 animate__animated animate__fadeIn">
    <div class="card-header bg-primary text-white rounded-3 mb-3">
        <h2 class="mb-0"><i class="bi bi-basket-fill me-2"></i>Orders Overview</h2>
    </div>
    <div class="card-body">
        <p class="lead">All orders in shop</p>

        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>#ORD12345</td>
                        <td>John Doe</td>
                        <td><span class="badge bg-success">Completed</span></td>
                        <td>2025-04-07</td>
                        <td>$320.00</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>#ORD12346</td>
                        <td>Jane Smith</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td>2025-04-06</td>
                        <td>$150.00</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
