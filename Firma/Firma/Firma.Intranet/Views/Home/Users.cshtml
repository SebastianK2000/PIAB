@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 p-4 mb-5 animate__animated animate__fadeIn">
    <div class="card-header bg-info text-white rounded-3 mb-3">
        <h2 class="mb-0"><i class="bi bi-people-fill me-2"></i>User Management</h2>
    </div>
    <div class="card-body">
        <p class="lead">Track and manage your user base like a pro 👨‍💻👩‍💻</p>

        <table class="table table-hover align-middle mt-4">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Alice Johnson</td>
                    <td>alice@example.com</td>
                    <td>Admin</td>
                    <td><span class="badge bg-success">Active</span></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Bob Smith</td>
                    <td>bob@example.com</td>
                    <td>User</td>
                    <td><span class="badge bg-secondary">Inactive</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
