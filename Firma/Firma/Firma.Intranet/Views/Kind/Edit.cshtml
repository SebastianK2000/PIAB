@model Firma.Data.Data.Sklep.Kind

@{
    ViewData["Title"] = "Edit Kind";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

<div class="container">
    <div class="title">Edit Kind</div>
    <div class="content">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <input type="hidden" asp-for="IdKind" />

            <div class="user-details">
                <div class="input-box">
                    <span class="details">Name</span>
                    <input asp-for="Name" class="form-control" placeholder="Enter kind name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Description</span>
                    <input asp-for="Description" class="form-control" placeholder="Enter kind description" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Save Changes" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
