@model Firma.Data.Data.Sklep.Orders

@{
    ViewData["Title"] = "Delete Order";
}

@section Styles {
    <link rel="stylesheet" href="~/css/delete.css" />
}

<div class="container">
    <div class="title text-danger">Delete Order</div>

    <div class="content">
        <h4 class="mb-4">Are you sure you want to delete this?</h4>
        <div class="content">
            <div class="user-details">
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Number)</span>
                    <div>@Html.DisplayFor(model => model.Number)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Date)</span>
                    <div>@Html.DisplayFor(model => model.Date)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.User)</span>
                    <div>@Html.DisplayFor(model => model.User)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Email)</span>
                    <div>@Html.DisplayFor(model => model.Email)</div>
                </div>
                <div class="input-box" style="flex: 1 1 100%;">
                    <span class="details">@Html.DisplayNameFor(model => model.Address)</span>
                    <div>@Html.DisplayFor(model => model.Address)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.PaymentMethod)</span>
                    <div>@Html.DisplayFor(model => model.PaymentMethod)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.DeliveryMethod)</span>
                    <div>@Html.DisplayFor(model => model.DeliveryMethod)</div>
                </div>
                <div class="input-box">
                    <span class="details">@Html.DisplayNameFor(model => model.Product)</span>
                    <div>@Html.DisplayFor(model => model.Product.ImageUrl)</div>
                </div>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdOrders" />
                <div class="button">
                    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}