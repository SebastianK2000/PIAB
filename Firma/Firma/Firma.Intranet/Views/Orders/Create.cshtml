@model Firma.Data.Data.Sklep.Orders

@{
    ViewData["Title"] = "Create Order";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

<div class="container">
    <div class="title">Create Order</div>
    <div class="content">
        <form asp-action="Create" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="user-details">
                <div class="input-box">
                    <span class="details">Order Number</span>
                    <input asp-for="Number" class="form-control" placeholder="Enter order number" />
                    <span asp-validation-for="Number" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Date</span>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">User</span>
                    <input asp-for="User" class="form-control" placeholder="Enter user name" />
                    <span asp-validation-for="User" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Email</span>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Address</span>
                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Payment Method</span>
                    <input asp-for="PaymentMethod" class="form-control" placeholder="Enter payment method" />
                    <span asp-validation-for="PaymentMethod" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Delivery Method</span>
                    <input asp-for="DeliveryMethod" class="form-control" placeholder="Enter delivery method" />
                    <span asp-validation-for="DeliveryMethod" class="text-danger small"></span>
                </div>

                <div class="input-box">
                    <span class="details">Products</span>
                    <select asp-for="IdProducts" class="form-control" asp-items="ViewBag.IdProducts"></select>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Create Order">
            </div>
        </form>

        <div class="back-button">
            <a asp-action="Index" class="btn-back">← Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
