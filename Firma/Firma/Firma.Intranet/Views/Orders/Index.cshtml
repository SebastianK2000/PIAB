@model IEnumerable<Firma.Data.Data.Sklep.Orders>

@{
    ViewData["Title"] = "Orders";
}

<h1 class="my-4">Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Order</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Order Number</th>
                <th>Date</th>
                <th>User</th>
                <th>Email</th>
                <th>Address</th>
                <th>Payment Method</th>
                <th>Delivery Method</th>
                <th>Product</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Number)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.User)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeliveryMethod)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                        {
                            <img src="@item.Product.ImageUrl" alt="Product" width="60" height="60" class="rounded shadow-sm" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdOrders" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.IdOrders" class="btn btn-sm btn-danger ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
