<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firma.PortalWWW</title>

    <!-- Bootstrap & Ikony -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- Style lokalne -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Firma.PortalWWW.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body class="body-fixed">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black py-2 fixed-top shadow-sm">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/assets/logo.svg" alt="Logo" class="logo-item" width="150" />
                </a>

                <!-- Hamburger -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu + Ikony -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto text-uppercase gap-lg-4 gap-2 align-items-lg-center">
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Home" asp-action="Mac">Mac</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Home" asp-action="Iphone">iPhone</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Home" asp-action="Ipad">iPad</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Home" asp-action="Watch">Watch</a></li>
                        <li class="nav-item"><a class="nav-item-main nav-link" asp-controller="Home" asp-action="Support">Support</a></li>

                        <!-- Ikona: Szukaj -->
                        <li class="nav-item">
                            <a class="nav-link-icon-main nav-link" href="#"><i class="bi bi-search"></i></a>
                        </li>

                        <!-- Ikona: Koszyk -->
                        <li class="nav-item">
                            <a class="nav-link-icon-main nav-link position-relative" href="#">
                                <i class="bi bi-bag"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.65rem;">
                                    3
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>

        </nav>
    </header>

    <main class="container mt-5 pt-4 pb-3">
        @RenderBody()
    </main>

    <footer class="bg-black text-light pt-5 pb-4 mt-auto">
        <div class="container text-center">
            <div class="mb-4">
                <a href="#">
                    <img class="logo-item" src="/assets/logo.svg" alt="Logo" width="150">
                </a>
            </div>

            <div class="row justify-content-center mb-3">
                <div class="col-auto d-flex flex-wrap gap-3 justify-content-center">
                    <a asp-action="Mac" asp-controller="Home" class="text-for-footer">Mac</a>
                    <a asp-action="Iphone" asp-controller="Home" class="text-for-footer">iPhone</a>
                    <a asp-action="Ipad" asp-controller="Home" class="text-for-footer">iPad</a>
                    <a asp-action="Watch" asp-controller="Home" class="text-for-footer">Watch</a>
                    <a asp-action="Support" asp-controller="Home" class="text-for-footer">Support</a>
                </div>
            </div>

            <div class="mb-3">
                <ul class="list-inline">
                    <li class="list-inline-item"><a href="#" class="text-for-footer">Terms of Service</a></li>
                    <li class="list-inline-item"><a asp-action="Privacy" asp-controller="Home" class="text-for-footer">Privacy Policy</a></li>
                    <li class="list-inline-item"><a href="#" class="text-for-footer">Cookie Policy</a></li>
                </ul>
            </div>

            <p class="mb-0">&copy; 2025 Tech Stack. All Rights Reserved.</p>
        </div>
    </footer>

    <!-- Skrypty -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
