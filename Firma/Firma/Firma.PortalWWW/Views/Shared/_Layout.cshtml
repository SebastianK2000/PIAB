<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firma.PortalWWW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Firma.PortalWWW.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>

<body class="body-fixed">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black py-2 fixed-top shadow-sm">
            @await Html.PartialAsync("Odnośniki", (IEnumerable<Firma.Data.Data.CMS.Strona>)ViewBag.ModelStrony)
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer text-center py-5 bg-black text-light">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-12 mb-4">
                    <a href="#">
                        <img class="logo-item" asp-area="" asp-controller="Home" asp-action="" src="/assets/logo.svg" alt="Logo" width="150">
                    </a>
                </div>

                <div class="col-12 col-md-8 mb-4">
                    <ul class="list-inline">
                        <a asp-area="" asp-controller="Home" asp-action="Mac" class="text-for-footer">Mac</a>
                        <a asp-area="" asp-controller="Home" asp-action="Iphone" class="text-for-footer">iPhone</a>
                        <a asp-area="" asp-controller="Home" asp-action="Ipad" class="text-for-footer">iPad</a>
                        <a asp-area="" asp-controller="Home" asp-action="Watch" class="text-for-footer">Watch</a>
                        <a asp-area="" asp-controller="Home" asp-action="Support" class="text-for-footer">Support</a>
                    </ul>
                </div>

                <div class="col-12 mb-4">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#" class="text-for-footer">Terms of Service</a></li>
                        <li class="list-inline-item"><a href="#" class="text-for-footer">Privacy Policy</a></li>
                        <li class="list-inline-item"><a href="#" class="text-for-footer">Cookie Policy</a></li>
                    </ul>
                </div>

                <div class="col-12">
                    <p>&copy; 2025 Tech Stack. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
