@model IEnumerable<Firma.Data.Data.Sklep.Support>

@{
    ViewData["Title"] = "Support";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/support.css" />
}

<div class="support-container">
    <div class="support-header d-flex justify-content-between align-items-center flex-wrap">
        <h1 class="store-title mb-3 mb-md-0">Support Center</h1>
        <a asp-action="Create" class="btn-create-support">Create New</a>
    </div>

    <div class="support-grid">
        @foreach (var item in Model)
        {
            <div class="support-card">
                <h2>@item.Name</h2>
                <p><strong>Email:</strong> @item.Email</p>
                <p><strong>Phone:</strong> @item.Phone</p>
                <p><strong>Address:</strong> @item.Address</p>
                <p><strong>Issue:</strong> @item.Description</p>
            </div>
        }
    </div>
</div>

