@model Firma.Data.Data.Sklep.Privacy

@{
    ViewData["Title"] = "Privacy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/privacy.css" />

<section class="privacy-policy">
    <div class="container">
        <h1>@Model.Title</h1>

        <p>@Model.Introduction</p>

        <h2>1. Information We Collect</h2>
        <p>@Model.InformationWeCollect</p>

        <h2>2. How We Use Information</h2>
        <p>@Model.HowWeUseInformation</p>

        <h2>3. Data Security</h2>
        <p>@Model.DataSecurity</p>

        <h2>4. Cookies</h2>
        <p>@Model.Cookies</p>

        <h2>5. Third-party Disclosure</h2>
        <p>@Model.ThirdPartyDisclosure</p>

        <h2>6. Your Consent</h2>
        <p>@Model.YourConsent</p>
    </div>
</section>
