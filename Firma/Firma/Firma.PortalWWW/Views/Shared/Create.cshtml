@model Firma.Data.Data.Sklep.Support

@{
    ViewData["Title"] = "Create Support";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

<div class="form-container">
    <h1 class="form-title">Create Support Entry</h1>
    <form asp-action="Create" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <div class="user-details">
            <div class="input-box">
                <span class="details">Name</span>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="input-box">
                <span class="details">Email</span>
                <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="input-box">
                <span class="details">Phone</span>
                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="input-box">
                <span class="details">Address</span>
                <input asp-for="Address" class="form-control" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <div class="input-box full-width">
                <span class="details">Description</span>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter issue description"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>
        </div>

        <div class="button">
            <input type="submit" value="Create Support Entry" />
        </div>
    </form>

    <div class="back-button">
        <a asp-action="Index" class="btn-back">← Back to List</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
