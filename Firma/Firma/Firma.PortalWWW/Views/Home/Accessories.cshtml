@{
    ViewData["Title"] = "Accessories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/tabs.css" />

<div class="accessories-store-container">
    <h1 class="store-title">All Accessories. <span class="span-in-header">Which one do you need?</span></h1>
    <div class="grid-container">
        <div class="card">
            <h2 class="top-h2-padding">AirPods Pro</h2>
            <img src="~/assets/airpodspro.jpg" alt="AirPods Pro">
            <div class="p-and-button">
                <p class="price">$249</p>
                <a href="#" class="btn">Buy</a>
            </div>
        </div>
        <div class="card">
            <h2 class="top-h2-padding">Magic Mouse</h2>
            <img src="~/assets/magicmouse.jpg" alt="Magic Mouse">
            <div class="p-and-button">
                <p class="price">$79</p>
                <a href="#" class="btn">Buy</a>
            </div>
        </div>
        <!-- More Accessories -->
    </div>
</div>
