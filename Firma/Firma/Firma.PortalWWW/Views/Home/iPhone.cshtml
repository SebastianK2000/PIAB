@model Firma.Data.Data.Sklep.Product

@{
    ViewData["Title"] = "iPhone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/iphone.css" />

@await Html.PartialAsync("Iphone", (IEnumerable<Firma.Data.Data.Sklep.Product>)ViewBag.ModelProducts)

<div class="iphone-store-container">
    <h1 class="store-title">All models. <span class="span-in-header">Which one for you?</span></h1>
    <div class="iphone-grid">
        <div class="iphone-card">
            <h2 class="top-h2-padding">iPhone 15</h2>
            <h2>iPhone 15 plus</h2>
            <img src="~/assets/iphone15.jpg" alt="iPhone 15">
            <div class="color-selector">
                <span class="color-circle" style="background-color: #000;"></span>
                <span class="color-circle" style="background-color: #fff;"></span>
                <span class="color-circle" style="background-color: #ff3b30;"></span>
            </div>
            <div class="p-and-button">
                <p class="price">$999</p>
                <a href="#" class="btn">Buy</a>
            </div>
        </div>
        <div class="iphone-card">
            <h2 class="top-h2-padding">iPhone 16</h2>
            <h2>iPhone 16 plus</h2>
            <img src="~/assets/iphone16.jpg" alt="iPhone 16">
            <div class="color-selector">
                <span class="color-circle" style="background-color: #000;"></span>
                <span class="color-circle" style="background-color: #fff;"></span>
                <span class="color-circle" style="background-color: #007aff;"></span>
            </div>
            <div class="p-and-button">
                <p class="price">$1099</p>
                <a href="#" class="btn buy-btn">Buy</a>
            </div>
        </div>
        <div class="iphone-card">
            <h2 class="top-h2-padding">iPhone 16e</h2>
            <img src="~/assets/iphone16e.jpg" alt="iPhone 16e">
            <div class="color-selector">
                <span class="color-circle" style="background-color: #000;"></span>
                <span class="color-circle" style="background-color: #fff;"></span>
            </div>
            <div class="p-and-button">
                <p class="price">$799</p>
                <a href="#" class="btn buy-btn">Buy</a>
            </div>
        </div>
        <div class="iphone-card">
            <h2 class="top-h2-padding">iPhone 16 Pro</h2>
            <h2>iPhone 16 Pro Max</h2>
            <img src="~/assets/iPhone16pro.jpg" alt="iPhone 16 Pro">
            <div class="color-selector">
                <span class="color-circle" style="background-color: #000;"></span>
                <span class="color-circle" style="background-color: #fff;"></span>
                <span class="color-circle" style="background-color: #007aff;"></span>
            </div>
            <div class="p-and-button">
                <p class="price">$1299</p>
                <a href="#" class="btn buy-btn">Buy</a>
            </div>
        </div>
    </div>
</div>
